<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.emptytrip.hr.emptytrip.SearchPaymentFragment">

    <!-- TODO: Update blank fragment layout -->
     <com.loopeer.shadow.ShadowView
         android:id="@+id/shadow_view"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:elevation="10dp"
         app:cornerRadius="4dp"
         app:shadowMargin="10dp"
         app:shadowRadius="14dp">

         <LinearLayout
             android:gravity="center_horizontal"

             android:weightSum="1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >

             <LinearLayout
                 android:gravity="center"
                 android:orientation="vertical"
                 android:layout_weight="1"
                 android:layout_marginBottom="30dp"
                 android:layout_width="match_parent"
                 android:layout_height="0dp">
                 <TextView
                     android:id="@+id/tv_topic"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="85dp"
                     android:gravity="center_horizontal"
                     android:text="Confirm Payment"
                     android:textColor="@color/title_Color"
                     android:textSize="29dp" />

                 <TextView
                     android:id="@+id/tv_price"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="$5.00"
                     android:textSize="34dp"
                     android:gravity="center_horizontal"
                     android:textColor="@color/title_Color"
                     android:layout_marginTop="20dp"
                     />
                 <TextView

                     android:layout_marginTop="40dp"
                     android:id="@+id/tv_note"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/grey_Color"
                     android:text="Driver doesn't accept cash payments"
                     android:gravity="center"
                     android:textSize="17dp"
                     />

                 <Button
                     android:layout_marginLeft="15dp"
                     android:layout_marginRight="15dp"
                     android:id="@+id/btn_addpayment"
                     android:layout_width="match_parent"
                     android:layout_height="45dp"
                     android:textAllCaps="false"
                     android:text="Add Payment Option"
                     android:textColor="@color/grey_Color"
                     android:background="@drawable/green_button_border"
                     android:layout_marginTop="10dp"
                     />
             </LinearLayout>


             <LinearLayout

                 android:gravity="bottom"
                 android:layout_marginBottom="20dp"
                 android:weightSum="1"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <Button
                     android:layout_weight="0.5"
                     android:layout_marginLeft="15dp"
                     android:layout_marginRight="15dp"
                     android:id="@+id/btn_okay"
                     android:textAllCaps="false"
                     android:layout_width="match_parent"
                     android:layout_height="45dp"
                     android:text="Ok"
                     android:textColor="@color/white_Color"
                     android:background="@drawable/green_background_button"
                     android:layout_marginTop="30dp"
                     />
                 <Button
                     android:layout_weight="0.5"
                     android:layout_marginLeft="15dp"
                     android:layout_marginRight="15dp"
                     android:id="@+id/btn_cancel"
                     android:textAllCaps="false"
                     android:layout_width="match_parent"
                     android:layout_height="45dp"
                     android:text="Cancel"
                     android:textColor="@color/white_Color"
                     android:background="@drawable/green_background_button"
                     android:layout_marginTop="30dp"
                     />
             </LinearLayout>
         </LinearLayout>

     </com.loopeer.shadow.ShadowView>



</FrameLayout>
