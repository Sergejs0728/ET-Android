                android:layout_toEndOf="@+id/img_pos1"
                android:layout_toStartOf="@id/img_pos2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/grey_Color"
                />
            <TextView

