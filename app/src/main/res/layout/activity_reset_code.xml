<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emptytrip.hr.emptytrip.ResetCodeActivity">


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/img_back"
            android:scaleType="centerInside"
            />
        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/btn_back"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/img_logogreen"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_logo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empty"
                android:textColor="#4add5d"
                android:textSize="45dp"
                />
            <TextView
                android:id="@+id/tv_logo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip"
                android:textSize="45dp"
                android:textColor="@color/title_Color"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_Color"
            android:text="Look out for your
confirmation code sent
via text message"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_marginTop="75dp"
            />
        <TextView
            android:id="@+id/tv_code"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmation Code"
            android:textSize="15dp"
            android:textColor="@color/grey_Color"
            />
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gery_button_border"
            android:hint="Enter Code"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:inputType="number"
            android:textColor="@color/grey_Color"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/btn_Done"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/green_background_button"
            android:textColor="#FFFFFF"
            android:text="Done"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:layout_marginTop="40dp"
            />

    </LinearLayout>

</RelativeLayout>
